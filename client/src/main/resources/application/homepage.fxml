<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<!--          -->

<BorderPane id="main" fx:id="anchor" minHeight="400" minWidth="900" prefHeight="890.0" prefWidth="1315.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainPageController">
   <left>
      <VBox id="lsidebar" fx:id="lsidebar" prefHeight="200.0" prefWidth="235.0" spacing="20.0" BorderPane.alignment="CENTER">

            <HBox id="logocontainer">
            <ImageView fitHeight="75.0" fitWidth="402.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@image/generic/Logo.png" />
               </image></ImageView>
            <ImageView fx:id="logo" fitHeight="75.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            </HBox>

         <!--Home-->
         <Button id="home" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#sidebtnClick" styleClass="selected" text="Home">
            <graphic>
               <FontIcon iconLiteral="mdi2h-home" />
            </graphic>
         </Button>

         <!-- Esplora -->
         <Button id="explore" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#sidebtnClick" text="Esplora">
            <graphic>
               <FontIcon iconLiteral="mdi2c-compass" />
            </graphic>
         </Button>

         <!-- Playlist -->
         <Button id="playlist" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#sidebtnClick" text="Playlist" visible="${controller.isLogged}">
         <graphic>
               <FontIcon iconLiteral="mdi2p-playlist-music" />
            </graphic>
         </Button>


         <!-- Region per dividere i bottoni -->
         <Region VBox.vgrow="ALWAYS" />

         <Button id="settings" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#sidebtnClick" text="Settings">
         <graphic>
               <FontIcon iconLiteral="mdi2c-cog" />
            </graphic>
         </Button>
         <Button id="about" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#sidebtnClick" text="About">

         <graphic>
               <FontIcon iconLiteral="mdi2i-information" />
            </graphic>
         </Button>

      </VBox>

   </left>
   <center>
      
   </center>
   <stylesheets>
      <URL value="@css/homepage.css" />
      <URL value="@css/MainPage.css" />
   </stylesheets>
</BorderPane>
